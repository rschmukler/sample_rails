<h1>New Talk</h1>
<%= form_for @talk do |f| %>
  <div class="control-group">
    <%= f.label :title %> <br />
    <%= f.text_field :title %>
  </div>
  <div class="control-group">
    <%= f.label :description %> <br />
    <%= f.text_field :description %>
  </div>
  <%= f.submit %>
<% end %>
<%= link_to '<-- Back', talks_path %>
